{
    "compilerOptions": {
        "target": "es6",
        "module": "es6",
        "lib": ["es5", "es6", "es2015", "es2016", "es2017", "es2018", "es2019", "es2020", "dom", "dom.iterable", "scripthost"],
        "baseUrl": "./",
        "paths": {
            "*":["src"]
        },
        "allowJs": true,
        "declaration": true,
        "sourceMap": false,
        "outDir": "dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        /* Type Checking */
        "strict": true,
        "skipLibCheck": true,
        "allowArbitraryExtensions": true,
        "removeComments": false,
        "strictNullChecks": true,
        "moduleResolution":"Node"
    },
    "include": ["./src/**/*.ts", "./src/**/*.d.ts"],
    "exclude": ["node_modules", "rollup.config.js", "test/**/*.ts"]
}